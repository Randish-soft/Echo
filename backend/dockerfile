FROM ubuntu:22.04

# Prevent interactive prompts during build
ENV DEBIAN_FRONTEND=noninteractive

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    libssl-dev \
    zlib1g-dev \
    libboost-all-dev \
    curl \
    wget \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Clone required libraries with specific compatible versions
RUN git clone https://github.com/CrowCpp/Crow.git libs/crow && \
    cd libs/crow && git checkout v1.0+5

RUN git clone https://github.com/nlohmann/json.git libs/json && \
    cd libs/json && git checkout v3.11.2

# Copy source code
COPY include/ ./include/
COPY src/ ./src/
COPY CMakeLists.txt ./

# Create data directories
RUN mkdir -p data/repositories data/summaries

# Build the application with more compatible C++ standard
RUN mkdir -p build && cd build && \
    cmake -DCMAKE_CXX_STANDARD=17 .. && \
    make -j$(nproc)

# Expose port
EXPOSE 8000

# Run the server
CMD ["./build/echo_server"]